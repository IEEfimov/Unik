<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ieefimov.unik.com.ieefimov.unik.SettingsActivity"
    android:orientation="vertical"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    >

    <FrameLayout
        android:id="@+id/kostil_top"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/settings_bar_background">
    </FrameLayout>

    <!--Toolbar-->

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:theme="@style/AppTheme.Bar"
        android:elevation="0dp"
        android:background="@color/settings_bar_background"
        android:layout_height="?actionBarSize"
        android:longClickable="false"
        app:title="@string/nav_settings"
        app:titleTextColor="@color/settings_bar_titleText"
        app:titleMargin="10dp">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nav"
                android:id="@+id/settings_calendarListBtn"
                android:padding="6dp">

                <TextView
                    android:text="@string/settings_calendar_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="@color/settings_button_title"
                    android:textSize="18sp" />

                <TextView
                    android:text="@string/settings_calendar_edit_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@color/settings_button_subtitle"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp" />



            </LinearLayout>

            <!--////////////////////////////////////////////////////////-->

            <FrameLayout
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/clockSeparator"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nav"
                android:id="@+id/settings_ItemListBtn"
                android:padding="5dp">

                <TextView
                    android:text="@string/settings_item_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/settings_button_title"
                    android:textSize="18sp" />

                <TextView
                    android:text="@string/settings_item_edit_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="@color/settings_button_subtitle"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp" />

            </LinearLayout>

            <!--////////////////////////////////////////////////////////////-->

            <FrameLayout
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/clockSeparator"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nav"
                android:id="@+id/settings_backupLayout"
                android:padding="5dp">

                <TextView
                    android:text="@string/settings_backup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_button_title"
                    android:textSize="18sp" />

                <TextView
                    android:text="@string/settings_backup_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_button_subtitle"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
