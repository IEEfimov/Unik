<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--Main theme of application-->
    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TextAppearance.AppTheme.Widget.Day" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/calendar_text</item>
    </style>

    <!--Тема туулбара-->
    <style name="AppTheme.Bar" parent="AppTheme">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="AppTheme.CheckBox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <!--Выпадающий список-->
    <style name="AppTheme.PopupDark" parent="AppTheme">
        <item name="android:textColor">#fff</item>
        <item name="android:colorBackground">@color/spinnerBG</item>
    </style>

    <style name="buttonTest" parent="Widget.AppCompat.Button">

    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/background</item>
    </style>



    <!--/////////////////////////////////////////////////////////////-->

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Dark.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/settings_button_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Dark.SettingDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/statusbar</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/clockSeparator</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Dark.OpenFileDialog">
        <item name="android:background">@color/Dark222</item>
        <item name="android:textColor">@color/clockSeparator</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Dark.OpenFileDialog.FileSubtitle">
        <item name="android:textColor">@color/Dark999</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Dark.OpenFileDialog.FileTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.Dark.OpenFileDialog.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
